---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import Hero from '../components/Hero.tsx';
import Tese from '../components/Tese.tsx';
import Arquitetura from '../components/Arquitetura.tsx';
import AIOSVision from '../components/AIOSVision.tsx'; // Novo
import Tecnologia from '../components/Tecnologia.tsx'; // Novo
import VantagemCompetitiva from '../components/VantagemCompetitiva.tsx'; // Novo
import SoberaniaCognitiva from '../components/SoberaniaCognitiva.tsx'; // Novo
import CerebroDoMundo from '../components/CerebroDoMundo.tsx'; // Novo e em destaque
import Footer from '../components/Footer.tsx';
---

<Layout title="Aurora | Construindo o Próximo Paradigma de Software">
  <Header client:load />
  <main>
    <Hero client:load />
    
    <div class="flex flex-col items-center w-full px-4">
      <div class="w-full max-w-7xl py-16 flex flex-col gap-16 md:gap-24">
        <Tese client:visible />
        <Arquitetura client:visible />
        
        {/* Seção de Destaque */}
        <CerebroDoMundo client:visible />

        <AIOSVision client:visible />
        <Tecnologia client:visible />
        <VantagemCompetitiva client:visible />
        <SoberaniaCognitiva client:visible />
      </div>
    </div>
  </main>
  <Footer client:visible />
</Layout>