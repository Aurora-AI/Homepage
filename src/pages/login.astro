---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/auth/LoginForm.tsx'; // Nosso componente interativo
---

<Layout title="Aurora - Autenticação">
  <main class="flex items-center justify-center min-h-screen">
    <div
      class="w-full max-w-sm p-8 rounded-lg"
      style="
        background: rgba(23, 26, 35, 0.5);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
      "
    >
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-white">AURORA</h1>
        <p class="text-white/70">Acesso ao Painel Seguro</p>
      </div>
      
      <LoginForm client:load />

    </div>
  </main>
</Layout>
