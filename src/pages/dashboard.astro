    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <TasksWidget client:visible />
      <div class="p-8 text-center border-2 border-dashed border-white/20 rounded-lg">
        <p class="text-white/70">Widget em desenvolvimento</p>
      </div>
      <div class="p-8 text-center border-2 border-dashed border-white/20 rounded-lg">
        <p class="text-white/70">Widget em desenvolvimento</p>
      </div>
    </div>
  </main>
</Layout>