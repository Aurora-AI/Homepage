---
// Caminho: src/pages/dashboard.astro

import DashboardLayout from '../layouts/DashboardLayout.astro';
import Sidebar from '../components/dashboard/Sidebar.tsx';
import Header from '../components/dashboard/Header.tsx';
import PerformanceWidget from '../components/dashboard/PerformanceWidget.tsx';
import TrainingWidget from '../components/dashboard/TrainingWidget.tsx';
import TasksWidget from '../components/dashboard/TasksWidget.tsx';
---
<DashboardLayout title="Aurora - Painel de Controle">
  
  {/* Componente da Barra Lateral */}
  <Sidebar client:idle />

  {/* Contêiner Principal para o conteúdo do dashboard */}
  <main class="flex-1 p-6 lg:p-8 overflow-y-auto">
    <div class="container mx-auto max-w-7xl">
      
      {/* Cabeçalho específico do Dashboard */}
      <Header client:idle />

      {/* Grid para os Widgets */}
      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <PerformanceWidget client:visible />
        <TrainingWidget client:visible />
        <TasksWidget client:visible />
      </div>

    </div>
  </main>

</DashboardLayout>