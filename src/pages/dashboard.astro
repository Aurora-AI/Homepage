---
import Layout from '../layouts/Layout.astro';
import LogoutButton from '../components/auth/LogoutButton.tsx';
---
<Layout title="Aurora - Painel">
  <main class="container mx-auto p-8 text-white">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold">Painel Seguro</h1>
      <LogoutButton client:load />
    </div>
    
    <div class="p-16 text-center border-2 border-dashed border-white/20 rounded-lg">
      <p class="text-white/70">Acesso autorizado. O conteúdo do painel será implementado aqui.</p>
    </div>
  </main>
</Layout>
