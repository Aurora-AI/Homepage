---
// src/layouts/BaseLayout.astro
import Header from '../components/Header.astro';
import '../index.css'; // Importação global do CSS
---
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aurora Homepage</title>
    <slot name="head" />
    <style>
      /* Add padding to the body to prevent content from being obscured by the fixed header */
      /* The actual height of the header is roughly 4rem (64px) due to p-4 */
      body {
        padding-top: 64px;
      }
    </style>
</head>
<body class="bg-black text-white"> {/* Added default body styles for consistency */}
    <Header />
    <slot />
</body>
</html>
